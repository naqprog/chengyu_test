<% if @date_flg %>
  <h4>あなたの<%= @responses[0].created_at.in_time_zone('Tokyo').strftime("%m/%d") %>の回答記録</h4>
<% else %>
  <h4>あなたの今までの回答記録</h4>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">正誤</th>
      <th scope="col">成語</th>
      <th scope="col">意味</th>
      <th scope="col">fav</th>
      <th scope="col">日時</th>
    </tr>
  </thead>
  <tbody>

    <% @responses.each do |res| %>
      <% qq = Question.find(res.question_id) %>

      <tr class="table-<%= res.correct ? "primary" : "warning" %>" >
        <td><%= res.correct ? "◯" : "✕" %></td>
        <td>
          <span class="notosans">
            <%= link_to(qq.chengyu_lang_setting(Setting.letter_kinds[current_user.setting.letter_kind]), question_show_path(qq.id)) %>
          </span>
        </td>
        <td class="col-6" ><%= qq.mean %></td>

        <% case Setting.test_formats[res.test_format]
          when Constants.test_format.chengyu then %>
            <td>意→成</td>
          <% when Constants.test_format.mean then %>
            <td>成→意</td>
        <% end %>

        <td><%= res.created_at.in_time_zone('Tokyo').strftime("%m/%d %H:%M") %></td>
      </tr>
    <% end %>

  </tbody>
</table>
<%= paginate @responses, theme: 'bootstrap-5' %><br />
<%= render 'shared/navigate_button_except_question' %>
