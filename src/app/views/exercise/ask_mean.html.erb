<%= form_with(url: exercise_judgement_mean_path, local: true) do |f| %>

  <% @choices.each_with_index do |c,i| %>
    <div class="form-check">
      <input class="form-check-input" type="radio" id="flexRadio<%= i+1 %>" name="input_answer_id" value=<%= c.id %>>
      <label class="form-check-label" for="flexRadio<%= i+1 %>">
      <%= i+1 %> ) <%= c.mean %>
      </label>
    </div>
    <input type="hidden" name="choices_id[]" value="<%= c.id %>" />
  <% end %>

  <input type="hidden" name="question_id" value="<%= @question.id %>" />
  <input type="hidden" name="use_letter_kind" value="<%= @use_letter_kind %>" />

  <button type="submit" class="btn btn-primary">回答する</button>

<% end %>
